{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bundle Dev",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/morphling/dist/bundle.dev.js",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/morphling/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}