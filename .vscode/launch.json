{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bundle Dev",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/morphling/dist/bundle.debug.js",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/morphling/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug C++ (morph.exe)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug/Debug/morphling.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/build/x64-debug/Debug",
            "environment": [],
            "console": "integratedTerminal"
        }
    ]
}